<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#776262">

    <ImageView
        android:layout_width="247dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:src="@drawable/images" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="10dp"
        android:text="Experience a literary adventure with a digital pen, transforming ideas into tangible masterpieces for writers and wordsmiths, shaping the world and beginning your story."
        android:textColor="@color/white"

        android:textSize="30dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Get Start"
        android:id="@+id/welcome"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:shadowColor="@color/black"/>

</LinearLayout>